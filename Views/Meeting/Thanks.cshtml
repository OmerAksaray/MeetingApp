@model UserInfo
@{
    ViewBag.Title="Başvuru Durumu";
    
}
<main class="text-center">
<h1 class="h4">Başvuru Durumu</h1>
@if(Model.WillAttend== true){
    <p>Teşekkürler @Model.Name, Toplantiya sizinle birlikte @ViewBag.UserCount kisi katiliyor</p>
<a class="btn btn-sm btn-outline-primary" asp-controller="Meeting" asp-action="List">Katilimcilari Listele</a>
}
else{
    <p>@Model.Name, toplantıya katılamadığın için üzgünüz.</p>
    <a class="btn btn-sm btn-outline-primary" href="/meeting/apply">Başvuru Formu</a>
}
</main>